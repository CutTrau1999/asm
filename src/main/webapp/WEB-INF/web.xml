<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateProductController</servlet-name>
        <servlet-class>com.example.asm.controller.CreateProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductController</servlet-name>
        <url-pattern>/product/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProductController</servlet-name>
        <servlet-class>com.example.asm.controller.ListProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductController</servlet-name>
        <url-pattern>/product/list</url-pattern>
    </servlet-mapping>
</web-app>